import os
from pathlib import Path
import pandas as pd
import numpy as np

def return_large_files(target, threshold):
    p = Path(target)

    if not p.is_dir():
        raise ValueError(f"{target} is not valid directory")
    
    for file_path in p.rglob("*"):
        if os.path.getsize(file_path) > threshold:
            print(file_path)
            print(f"{os.path.getsize(file_path) / 10 ** 9:.2f} GB")


target = Path.home()
threshold = 10 ** 9
return_large_files(target, threshold)